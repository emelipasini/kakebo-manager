{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint" // For TypeScript.
    ],
    "overrides": [
        // Use `overrides` so ESLint can check both JS and TS files.
        {
            "files": ["*.ts", "*.tsx"],
            "extends": [
                "plugin:@typescript-eslint/recommended",
                "plugin:@typescript-eslint/recommended-requiring-type-checking"
            ],
            "parserOptions": {
                "tsconfigRootDir": ".",
                "project": ["./tsconfig.json"]
            }
        }
    ],
    "ignorePatterns": [".eslintrc.js"],
    "rules": {
        //"quotes": ["error", "double"], // Use double quotes.
        "quotes": "off", // note you must disable the base rule as it can report incorrect errors.
        "@typescript-eslint/quotes": ["error", "dobule"],
        "semi": ["error", "always"], // Always add a semicolon at the end statements.
        "indent": ["error", 4], // Indentation is two spaces.
        "no-console": "error" // Avoid using methods on `console` in the code.
    }
}
